@model Employee
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<p>Enter a customer name:</p>

<form method="post">
    Name:
    <input asp-for="@Model.Name" />
    Phone:
    <input asp-for="@Model.Phone" />
    Address:
    <input asp-for="@Model.Address" />
    Salary:
    <input asp-for="@Model.Salary" />
    <input type="submit" />
</form>